<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MatchDetailsActivity">
  <include
      android:id="@+id/toolbar"
      layout="@layout/toolbar"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="20dp"
      android:layout_below="@+id/toolbar">

    <EditText
        android:id="@+id/enter_total_overs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter total overs"
        android:inputType="number"/>

    <EditText
        android:id="@+id/enter_total_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter total players"
        android:inputType="number"/>

    <EditText
        android:id="@+id/enter_team_name_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter team one name" />

    <EditText
        android:id="@+id/enter_team_name_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter team two name" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Next"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/next"/>
  </LinearLayout>
</LinearLayout>