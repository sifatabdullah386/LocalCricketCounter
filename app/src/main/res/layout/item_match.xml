<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#D6D6D8"
        android:layout_margin="5dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/match_no"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="25dp"
                android:padding="3dp"
                android:background="@drawable/saved_mathes_background"
                android:text="Match : 1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#F7F5F5"/>
            <TextView
                android:id="@+id/teamNames"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C2BFBF"
                android:textAlignment="center"
                android:padding="3dp"
                android:textColor="#091452"
                android:textStyle="bold"
                android:text="CSE vs EEE"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="#D6D6D8"
                android:weightSum="4"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/team_a"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="#00897B"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:text="CSE" />
                <TextView
                    android:id="@+id/total_runs_team_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:padding="5dp"
                    android:text="0/0 Runs" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:padding="5dp"
                    android:text="@string/amp" />
                <TextView
                    android:id="@+id/total_overs_team_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:padding="5dp"
                    android:text="0.0 Overs" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/team_b"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="#E53935"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:padding="5dp"
                    android:text="EEE"/>
                <TextView
                    android:id="@+id/total_runs_team_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:padding="5dp"
                    android:text="0/0 Runs"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:padding="5dp"
                    android:text="@string/amp" />
                <TextView
                    android:id="@+id/total_overs_team_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="0.0 Overs"/>
            </LinearLayout>

                <TextView
                    android:id="@+id/show_wining_team"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#C2BFBF"
                    android:textAlignment="center"
                    android:padding="3dp"
                    android:textColor="#414242"
                    android:textStyle="bold"
                    android:text="Team B Win By 0 Runs"
                    android:textSize="15sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>